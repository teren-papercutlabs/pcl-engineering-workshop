<%= form_with(model: category, class: "space-y-6") do |form| %>
  <% if category.errors.any? %>
    <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-bold"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul class="list-disc list-inside mt-2">
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none sm:text-sm p-2 border" %>
  </div>

  <div>
    <%= form.label :color, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex items-center space-x-3">
      <%= form.color_field :color, class: "h-10 w-20 rounded border border-gray-300 cursor-pointer" %>
      <span class="text-sm text-gray-500">Click to pick a color</span>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", categories_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded" %>
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded cursor-pointer" %>
  </div>
<% end %>
