<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
    <div class="flex items-center space-x-3">
      <span class="inline-block w-6 h-6 rounded-full" style="background-color: <%= @category.color %>"></span>
      <h1 class="text-2xl font-bold text-gray-900"><%= @category.name %></h1>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_category_path(@category), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
      <%= link_to "Delete", @category, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded" %>
    </div>
  </div>
</div>

<div class="mt-6">
  <h2 class="text-xl font-semibold text-gray-900 mb-4">Tasks in this category</h2>

  <% if @category.tasks.empty? %>
    <p class="text-gray-500">No tasks in this category yet.</p>
  <% else %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @category.tasks.each do |task| %>
          <li>
            <div class="px-4 py-4 flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  <%= link_to task.title, task, class: "hover:text-blue-600" %>
                </p>
                <p class="text-sm text-gray-500">
                  Due: <%= task.due_date&.strftime("%b %d, %Y") || "No due date" %>
                </p>
              </div>
              <div class="flex items-center space-x-3">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case task.status
                      when 'pending' then 'bg-yellow-100 text-yellow-800'
                      when 'in_progress' then 'bg-blue-100 text-blue-800'
                      when 'completed' then 'bg-green-100 text-green-800'
                      end %>">
                  <%= task.status.humanize %>
                </span>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "Back to Categories", categories_path, class: "text-blue-600 hover:text-blue-900" %>
</div>
