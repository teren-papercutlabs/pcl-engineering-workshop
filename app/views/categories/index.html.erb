<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Categories</h1>
  <%= link_to "New Category", new_category_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
</div>

<% if @categories.empty? %>
  <div class="text-center py-12 bg-white rounded-lg shadow-sm border border-gray-200">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
    </svg>
    <h3 class="mt-4 text-lg font-medium text-gray-900">No categories yet</h3>
    <p class="mt-1 text-sm text-gray-500">Create categories to organize your tasks.</p>
    <div class="mt-6">
      <%= link_to "Create Category", new_category_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
    </div>
  </div>
<% else %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @categories.each do |category| %>
      <div class="bg-white shadow sm:rounded-lg p-4 hover:shadow-md transition-shadow duration-150">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <span class="inline-block w-4 h-4 rounded-full" style="background-color: <%= category.color %>"></span>
            <%= link_to category.name, category, class: "text-lg font-medium text-gray-900 hover:text-blue-600" %>
          </div>
          <div class="flex space-x-2">
            <%= link_to "Edit", edit_category_path(category), class: "text-blue-600 hover:text-blue-900 text-sm" %>
            <%= link_to "Delete", category, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure? This will also delete all tasks in this category." }, class: "text-red-600 hover:text-red-900 text-sm" %>
          </div>
        </div>
        <p class="mt-2 text-sm text-gray-500"><%= category.tasks.count %> task(s)</p>
      </div>
    <% end %>
  </div>
<% end %>
