<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @task.title %></h1>
      <% if @task.category %>
        <p class="mt-1 text-sm text-gray-500">
          <span class="inline-block w-2 h-2 rounded-full mr-1" style="background-color: <%= @task.category.color %>"></span>
          <%= @task.category.name %>
        </p>
      <% end %>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_task_path(@task), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
      <%= link_to "Delete", @task, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded" %>
    </div>
  </div>
  <div class="border-t border-gray-200">
    <dl>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            <%= case @task.status
                when 'pending' then 'bg-yellow-100 text-yellow-800'
                when 'in_progress' then 'bg-blue-100 text-blue-800'
                when 'completed' then 'bg-green-100 text-green-800'
                end %>">
            <%= @task.status.humanize %>
          </span>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Priority</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            <%= case @task.priority
                when 'low' then 'bg-gray-100 text-gray-800'
                when 'medium' then 'bg-orange-100 text-orange-800'
                when 'high' then 'bg-red-100 text-red-800'
                end %>">
            <%= @task.priority.humanize %>
          </span>
        </dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Due Date</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= @task.due_date&.strftime("%B %d, %Y") || "No due date" %>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Description</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= @task.description.present? ? @task.description : "No description" %>
        </dd>
      </div>
    </dl>
  </div>
</div>

<div class="mt-4">
  <%= link_to "Back to Tasks", tasks_path, class: "text-blue-600 hover:text-blue-900" %>
</div>
